<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".createPinFirstTimeUse">

    <TextView
        android:id="@+id/textView43"
        android:layout_width="412dp"
        android:layout_height="68dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="-3dp"
        android:layout_marginBottom="615dp"
        android:background="@color/teal_200"
        android:fontFamily="cursive"
        android:text="Cretate PIN"
        android:textAlignment="center"
        android:textSize="45dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView44"
        android:layout_width="364dp"
        android:layout_height="107dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="23dp"
        android:layout_marginBottom="428dp"
        android:text="WELCOME Calculator V1.0\nThis is onetime message for users.\n
you need to create a PIN number before using this application.\n
ENJOY IT!!"
        android:textAlignment="center"
        tools:layout_editor_absoluteX="89dp"
        tools:layout_editor_absoluteY="140dp" />

    <Button
        android:id="@+id/btnResetPin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="161dp"
        android:layout_marginBottom="223dp"
        android:text="reset"
        app:backgroundTint="@color/gray" />

    <Button
        android:id="@+id/btnCreatePin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="64dp"
        android:layout_marginBottom="223dp"
        android:text="create"
        app:backgroundTint="@color/red" />

    <Button
        android:id="@+id/btnCancelPin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="257dp"
        android:layout_marginBottom="223dp"
        android:text="cancel"
        app:backgroundTint="@color/purple_200" />

    <EditText
        android:id="@+id/confirmPin"
        android:layout_width="289dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="64dp"
        android:layout_marginBottom="290dp"
        android:ems="10"
        android:hint="Confirm PIN"
        android:inputType="numberDecimal"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/createPin"
        android:layout_width="289dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="64dp"
        android:layout_marginBottom="370dp"
        android:ems="10"
        android:hint="Create PIN"
        android:inputType="numberDecimal"
        android:textAlignment="center" />

</RelativeLayout>